<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="main.js"></script>
    <title>Document</title>
  </head>
  <body>
    <h1 class="text-uppercase text-center">enter product</h1>
    <form action="/products" method="post" class="form">
      <div class="form-group">
        <label for="name">Name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          placeholder="Enter name"
        />
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input
          type="number"
          class="form-control"
          id="price"
          name="price"
          placeholder="Enter price"
        />
      </div>
      <div class="form-group">
        <label for="description">Img URL</label>
        <input
          type="url"
          class="form-control"
          id="description"
          name="description"
          placeholder="Enter URL"
        />
      </div>
      <button type="submit" class="btn btn-success my-2">Submit</button>
    </form>
    <form action="/products/previews">
      <button type="submit" class="btn btn-success my-2">Views</button>
    </form>
    <br />

    <%- include('../views/partials/table.ejs') %>
    

    <h2 class="text-uppercase text-center row-cols-auto">message center</h2>
    <div class="container">
         <form
      class="row-cols-auto"
      onsubmit="addMessage(this)"
    >
      <div>
        <input
          type="text"
          class="form-control w-50"
          id="email"
          placeholder="email@gmail.com"
        />
      </div>
      <div id="messages"></div>
      <input
        type="text"
        class="form-control text-start formControl"
        id="text"
        placeholder="Enter message"
      />
      <button type="submit" class="btn btn-success p-2 my-2 mx-2 col-md-4">Send</button>
    </form>
    </div>
   
  </body>

  <style>

      .formControl{
        
  width: 100%;
  height: 150px;
  padding: 12px 20px;
  box-sizing: border-box;
  border: 2px solid #ccc;
  border-radius: 4px;
  background-color: #f8f8f8;
  resize: none;
  

}
      

    form {
      margin: 0 auto;
      width: 50%;
    }
    body {
      background-color: #9dd3f3;
    }
  </style>
</html>
