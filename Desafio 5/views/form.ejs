<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
    <h1 class="text-uppercase text-center">enter product </h1>
    <form action="/products" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" class="form-control" id="price" name="price" placeholder="Enter price">
        </div>
        <div class="form-group">
            <label for="description">Img URL</label>
            <input type="url" class="form-control" id="description" name="description" placeholder="Enter URL">
        </div>
        <button type="submit" class="btn btn-success my-2">Submit</button>
    </form>
    <form action="/products/previews"><button type="submit" class="btn btn-success my-2">Views</button> </form> 
    <br>

    <%- include('../views/partials/table.ejs') %>


</body>

<style>
    form {
        margin: 0 auto;
        width: 50%;
    }
    body {
        background-color: #9dd3f3;
    }
</style>
</html>